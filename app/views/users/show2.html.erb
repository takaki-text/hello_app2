 <% @courses.each do |course| %>
  <hr>
  <p><%= course.title %></p>
  <p><%= course.plan %></p>
  <% course.tag_list.each do |tag| %>
  <span class="badge badge-primary"><%= tag %></span>
<% end %>
<h4> 登録要望</h4>
<% @demands.each do |demand| %>
  <hr>
  <p><%=demand.body%></p>
<% end %>
<% end %>