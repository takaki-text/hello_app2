
<%= link_to "トップページへ戻る", root_path %>
<% @courses.reverse_each do |course| %>

<p><img src=<%= course.user.image %> class = "icon_image_messeges"><% if user_signed_in? %>
            <%=link_to course.user.name, show2_user_path(course.user.id), style:"font-weight: bold;"%>
        <% else %>
            <%=link_to course.user.name, "/courses/#{course.id}", style:"font-weight: bold;"%>
        <% end %>
 </p>
 <p><%= course.title %></p>
  <p><%=course.plan%></p>
  <% course.tag_list.each do |tag| %>
  <span class="badge badge-primary"><%= tag %></span>
<% end %>
<% end %>

<h5><%= link_to "トップページへ戻る", root_path %></h5>